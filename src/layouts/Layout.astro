---
import { ViewTransitions } from "astro:transitions";
import FloatWaButton from "@/components/float-wa-button.astro";
import "@/assets/style.css";
import { getEntry } from "astro:content";

interface Props {
	title?: string;
	description?: string;
	colored?: boolean;
}

const { title, description, colored = false } = Astro.props;
const resolvedTitle = `DUSPOR${title ? " | " + title : ""}`;

const config = await getEntry("config", "index");
---

<!doctype html>
<html lang="pt-br">
	<head>
		<!-- Google Tag Manager -->
		<script is:inline>
			(function (w, d, s, l, i) {
				w[l] = w[l] || [];
				w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
				var f = d.getElementsByTagName(s)[0],
					j = d.createElement(s),
					dl = l != "dataLayer" ? "&l=" + l : "";
				j.async = true;
				j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
				f.parentNode.insertBefore(j, f);
			})(window, document, "script", "dataLayer", "GTM-WNCKW96C");
		</script>
		<!-- End Google Tag Manager -->

		<meta charset="UTF-8" />
		<meta
			name="description"
			content={description ?? config.data.siteDescription}
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="index, follow" />
		<meta name="author" content="Duspor" />
		<meta name="format-detection" content="telephone=no" />
		<link rel="canonical" href={Astro.url.href} />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="pt_BR" />
		<meta property="og:site_name" content="Duspor" />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:title" content={resolvedTitle} />
		<meta
			property="og:description"
			content={description ?? config.data.siteDescription}
		/>
		<meta property="og:image" content="https://duspor.com.br/logo-min.png" />
		<meta
			property="og:image:secure_url"
			content="https://duspor.com.br/logo-min.png"
		/>
		<meta property="og:image:width" content="1802" />
		<meta property="og:image:height" content="1695" />
		<meta property="og:image:alt" content="Duspor - Portas Industriais" />
		<meta property="og:image:type" content="image/png" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={resolvedTitle} />
		<meta
			name="twitter:description"
			content={description ?? config.data.siteDescription}
		/>
		<meta name="twitter:image" content="https://duspor.com.br/logo-min.png" />

		<!-- Apple -->
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<meta name="apple-mobile-web-app-title" content="Duspor" />

		<script
			is:inline
			src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<title>{resolvedTitle}</title>

		<ViewTransitions />

		<slot name="head" />
	</head>

	<body
		class:list={[
			"w-screen overflow-x-hidden font-helvetica",
			colored ? "bg-primary" : "bg-white",
		]}
	>
		<!-- Google Tag Manager (noscript) -->
		<noscript
			><iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-WNCKW96C"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe></noscript
		>
		<!-- End Google Tag Manager (noscript) -->

		<script
			is:inline
			src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"
		></script>
		<script is:inline>
			const loadFont = () => {
				WebFont.load({
					custom: {
						families: ["Helvetica", "Basement Grotesque"],
						urls: ["/fonts.css"],
					},
				});
			};

			loadFont();

			document.addEventListener("astro:after-swap", () => {
				loadFont();
			});
		</script>

		<slot />

		<FloatWaButton />
	</body>
</html>
